<div class="row">
    <div class="col-md-6">
        <h3>Not Yet Eaten</h3>
        <table class="table">
            <thead class="thead-light">
                <tr>
                    <th scope="col">burger_id</th>
                    <th scope="col">burger_name</th>
                    <th scope="col">devour</th>
                </tr>
            </thead>
            <tbody>
                {{#each burgers}}
                {{#unless devoured}}{{!-- if not devoured --}}
                <tr>
                    <th scope="row">{{id}}</th>
                    <td>{{burger_name}}</td>
                    <td><a id="{{id}}" data-burger-name="{{burger_name}}" data-devoured="1" class="btn btn-warning devourBtn" role="button">Devour</a></td>
                </tr>
                {{/unless}}
                {{/each}}
            </tbody>
        </table>
    </div>
    <div class="col-md-6">
        <h3>Devoured</h3>
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">burger_id</th>
                    <th scope="col">burger_name</th>
                </tr>
            </thead>
            <tbody>
                {{#each burgers}}
                {{#if devoured}}
                <tr>
                    <th scope="row">{{id}}</th>
                    <td>{{burger_name}}</td>
                </tr>
                {{/if}}
                {{/each}}
            </tbody>
        </table>
    </div>
</div>